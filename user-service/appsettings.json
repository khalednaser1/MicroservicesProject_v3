{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Metrics": {
    "Enabled": true,
    "Port": 6003
  },
  "HealthChecks": {
    "Endpoint": "/health",
    "Enabled": true
  },
  "Redis": {
    "Connection": "redis:6379",
    "CacheTimeoutSeconds": 30
  }
}
